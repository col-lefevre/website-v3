{% macro button_helper(buttons) %}
    <div class="buttons">
        {% for entry in buttons %}
            <a class="button {{'disabled' if entry.disabled}}" href="{{ entry.link | url }}" target="_blank" rel="noopener noreferrer" arial-label="{{entry.label}}, opens PDF in new tab">{{entry.label}}</a>
        {% endfor %}
    </div>
{% endmacro %}

{% macro project(header, subtitle, body, img, alt, buttons) %}
    <div class="project">
        {# Desktop Layout #}
        <div class="row desktop">
            <div class="col-lg-4">
                <img loading="lazy" src="{{ '/assets/images/' + img | url }}" class="img-fluid crop-3x2" alt="{{alt}}">
            </div>
            <div class="col-lg-7 offset-1">
                <h2>
                    <div class="h2">{{header}}</div>
                </h2>
                <div class="subtitle">{{subtitle}}</div>
                {% for entry in body %}
                    <p>{{entry | safe}}</p>
                {% endfor %}
                {{ button_helper(buttons) }}
            </div>
        </div>

        {# Tablet Layout #}
        <div class="row tablet">
            <div class="col-sm-4">
                <img loading="lazy" src="{{ '/assets/images/' + img | url }}" class="img-fluid crop-3x2" alt="{{alt}}">
            </div>
            <div class="col-sm-7 offset-1">
                <div class="vertical-center">
                    <div class="h2">{{header}}</div>
                    <div class="subtitle">{{subtitle}}</div>
                </div>
            </div>
            <div class="col-sm-12">
                {% for entry in body %}
                    <p>{{entry | safe}}</p>
                {% endfor %}
                {{ button_helper(buttons) }}
            </div>
        </div>

        {# Mobile Layout #}
        <div class="row mobile">
            <div class="col-12">
                <img loading="lazy" src="{{ '/assets/images/' + img | url }}" class="img-fluid crop-16x9" alt="{{alt}}">
            </div>
            <div class="col-12">
                <div class="h2">{{header}}</div>
                <div class="subtitle">{{subtitle}}</div>
                {% for entry in body %}
                    <p>{{entry | safe}}</p>
                {% endfor %}
                {{ button_helper(buttons) }}
            </div>
        </div>
    </div>
{% endmacro %}