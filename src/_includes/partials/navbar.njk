{# Desktop + Tablet #}
<div class="desktop tablet">
    <div class="container-fluid nav-border">
        <div class="container">
            <nav>
                <a class="nav-img" href="{{ '/' | url }}">
                    <img src="/assets/images/favicon.png">
                </a>
                {% include "partials/nav-links.njk" %}
            </nav>
        </div>
    </div>
</div>

{# Mobile #}
<div class="mobile">
    {# Navbar #}
    <div class="container nav-border" id="mobile-nav">
        <nav>
            <a class="nav-img" href="{{ '/' | url }}">
                <img src="/assets/images/favicon.png">
            </a>
            <div id="nav-mobile-bars">
                {% include "svg/svg-nav-bars.njk" %}
            </div>
        </nav>
    </div>
    {# Spacing for floating navbar #}
    <div id="mobile-nav-spacer"/>
    {# Popout #}
    <div id="popout" class="container hide">
        <div id="nav-mobile-x">
            {% include "svg/svg-nav-x.njk" %}
        </div>
        {% include "partials/nav-links.njk" %}
    </div>
</div>